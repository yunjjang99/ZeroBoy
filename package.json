{
  "name": "zeroboy",
  "version": "1.0.0",
  "description": "ZeroBoy - Advanced Anti-Detection Browser Management System",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run start:backend",
    "start:dev": "concurrently \"npm run start:backend:dev\" \"npm run start:frontend:dev\"",
    "start:backend": "cd backend && npm run start:prod",
    "start:backend:dev": "cd backend && npm run start:dev",
    "start:frontend:dev": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend && npm run build:electron",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd electron && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../electron && npm install",
    "install:playwright": "cd backend && chmod +x install-playwright.sh && ./install-playwright.sh",
    "setup": "npm run install:all && npm run install:playwright",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules electron/node_modules",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "keywords": [
    "anti-detection",
    "browser-automation",
    "web-fingerprinting",
    "electron",
    "nestjs",
    "react",
    "playwright",
    "camoufox-js"
  ],
  "author": "ZeroBoy Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.zeroboy.app",
    "productName": "ZeroBoy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/dist/**/*",
      "frontend/dist/**/*",
      "data/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
